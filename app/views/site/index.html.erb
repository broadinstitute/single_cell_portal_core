<div class="well well-lg jumbotron" id="main-banner">
	<h1 class="lead text-center">Single Cell Portal <sup><small>BETA</small></sup></h1>
	<p class="lead text-center">Visualization portal for single cell RNA-seq data.</p>
</div>
<h2 class="study-lead"><span class="fa fa-book"></span> Browse Studies</h2>
<div class="row form-group">
  <div class="col-md-6 col-sm-12 col-xs-12">
    <%= form_tag(search_path, method: :get, class: 'form') do %>
      <div class="input-group">
        <%= text_field_tag :search_terms, nil, class: 'form-control', placeholder: 'Search Studies...' %>
        <div class="input-group-btn">
          <button class="btn btn-info" type="submit" name="commit" data-toggle="tooltip" title="Execute Search"><span class="fa fa-search"></span></button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-12">
    <%= link_to "<span class='fa fa-clock-o'></span> Most Recent".html_safe, site_path(order: 'recent'), class: 'btn btn-default btn-block' %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-12">
    <%= link_to "<span class='fa fa-star-o'></span> Most Popular".html_safe, site_path(order: 'popular'), class: 'btn btn-default btn-block' %>
  </div>
  <div class="col-md-2 col-sm-4 col-xs-12">
    <%= link_to "<span class='fa fa-ban'></span> Reset Order".html_safe, site_path, class: 'btn btn-default btn-block' %>
  </div>
</div>
<div class="panel-group" id="studies">
	<%= render partial: 'studies_list' %>
</div>
<div class="row">
  <div class="col-sm-offset-4 col-sm-4">
    <%= link_to "Load More Studies", "javascript:void(0);", class: "btn btn-lg btn-block btn-default", id: "pagination" %>
  </div>
</div>

<%= link_to "<span class='fa fa-chevron-up'></span>".html_safe, "#", class: "btn btn-default btn-xs" %>
<script type="text/javascript">
  $(window).scroll(bindScroll);

  var totalPages = <%= @studies.total_pages %>;
  var currentPage = "<%= params[:page] %>";
  var order = "<%= params[:order] %>";
  var search = "<%= params[:search] %>";

  function bindScroll(){
    if($(window).scrollTop() + $(window).height() > $(document).height() - 1) {
      $(window).unbind('scroll');
      paginateStudies(totalPages, order);
    }
  }

  if ( currentPage == "" && totalPages == 1) {
    $(window).unbind('scroll');
    $("#pagination").toggle();
  }

  $("#pagination").click(function() {
    $(window).unbind('scroll');
    paginateStudies(totalPages, order);
  });

  if ( search != "" ) {
    $("#search").val(search);
  }
</script>
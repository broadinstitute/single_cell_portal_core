<%= nested_form_for(@study, html: {multipart: true}) do |f| %>
	<% if @study.errors.any? %>
		<div class="bs-callout bs-callout-danger">
			<h4><%= pluralize(@study.errors.count, "error") %> prohibited this study from being saved:</h4>

			<ul>
				<% @study.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<%= f.hidden_field :user_id, value: @study.new_record? ? current_user._id : @study.user_id %>
	<div class="form-group row">
		<div class="col-md-8">
			<%= f.label :name %><br/>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class="col-md-2">
			<%= f.label :embargo, "No Data Download Until? <span class='fa fa-question-circle' data-toggle='tooltip' title='Prevent data file downloads until date specified below (leave blank to allow downloads)' data-placement='right'></span>".html_safe %><br />
			<%= f.text_field :embargo, class: 'form-control datepicker' %>
		</div>
		<div class="col-md-2">
			<%= f.label :public %><br />
			<%= f.select :public, options_for_select([['Yes',1],['No',0]], @study.public? ? 1: 0), {}, {class: 'form-control'} %>
		</div>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.cktext_area :description %>
	</div>
	<div class="form-group">
		<h3>Sharing</h3>
		<%= f.fields_for :study_shares %>
		<%= f.link_to_add "<span class='fa fa-plus'></span> Share Study".html_safe, :study_shares, class: 'btn btn-primary', id: 'add-study-share' %>
	</div>
  <div class="form-group">
    <%= f.submit nil, class: 'btn btn-lg btn-success' %>
  </div>
<% end %>
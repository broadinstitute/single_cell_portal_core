$('<%= params[:modal_target]%>').data('spinner').stop();
$('<%= params[:modal_target]%>-modal').modal('toggle');

// completed wizard step the first time a user uploads a sub-cluster or marker gene list file
// other calls to completeWizardStep are in the success callback of fileuploader
if (
				('<%= params[:partial] %>' == 'initialize_sub_clusters_form' && <%= @study.study_files.select {|sf| sf.file_type == 'Cluster Coordinates' && sf.cluster_type == 'sub'}.count %> == 1) ||
				('<%= params[:partial] %>' == 'initialize_marker_genes_form' && <%= @study.study_files.select {|sf| sf.file_type == 'Marker Gene List'}.count %> == 1)
) {
	completeWizardStep();
}

// re-render form upload to get download button and increment completed status
$.get("<%= retrieve_wizard_upload_study_path(@study._id) %>", {file: '<%= params[:file] %>', selector: '<%= params[:selector] %>', partial: '<%= params[:partial] %>'});
